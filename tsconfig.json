{
  "compileOnSave": false,
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types", "./types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules",
    "node_modules\\",
    "\\node_modules\\",
    "node_modules/@types",
    "./node_modules/",
    "**/*.spec.ts",
    "**/*.d.ts"
]
}
